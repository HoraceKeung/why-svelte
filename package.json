{
	"name": "why-svelte",
	"version": "1.0.0",
	"devDependencies": {
		"npm-run-all": "^4.1.5",
		"postcss-cli": "^6.1.3",
		"rollup": "^1.17.0",
		"rollup-plugin-alias": "^1.5.2",
		"rollup-plugin-commonjs": "^10.0.1",
		"rollup-plugin-livereload": "^1.0.1",
		"rollup-plugin-node-resolve": "^5.2.0",
		"rollup-plugin-replace": "^2.2.0",
		"rollup-plugin-svelte": "^5.1.0",
		"rollup-plugin-terser": "^4.0.4",
		"svelte": "^3.6.9",
		"tailwindcss": "^1.0.5"
	},
	"dependencies": {
		"@fullhuman/postcss-purgecss": "^1.2.0",
		"sirv-cli": "^0.4.4"
	},
	"scripts": {
		"watch:tailwind": "postcss src/css/global.css -o public/global.css -w",
		"build:tailwind": "postcss src/css/global.css -o public/global.css",
		"build": "npm run build:tailwind && rollup -c",
		"autobuild": "rollup -c -w",
		"dev": "run-p start:dev autobuild watch:tailwind",
		"start": "sirv public --single",
		"start:dev": "sirv public -p 3000 --single --dev",
		"live": "npm run build && firebase deploy --only hosting",
		"add": "git add . && git commit -m add && git push && npm run live"
	}
}
